<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/layout_escrow_root"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toLeftOf="@+id/layout_photo_tie_container"
            android:layout_toStartOf="@+id/layout_photo_tie_container"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adigun Hammed"
                android:id="@+id/tv_from_name"
                android:textAppearance="@style/BoldText"
                android:textStyle="bold"/> -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/tv_btc_escrow_view"
                android:text="1.2099BTC"
                android:textAppearance="@style/BoldText"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_narration_escrow_view"
                android:text="@string/lorem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23-01-2018, 21:09"
                android:id="@+id/tv_time_escrow_view"
                android:textSize="12sp"
                android:textStyle="bold"/>
            <!-- <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$18,000"
                android:textStyle="bold"
                android:id="@+id/tv_usd_escrow_view"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/tv_time_escrow_view"
                android:text="12-12-2018, 12:09"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:visibility="gone"
                android:textStyle="bold"
                android:id="@+id/tv_status_escrow_view"
                android:textAppearance="@style/BoldText"
                android:textColor="@color/green"/> -->
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/layout_photo_tie_container"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/mypics"
                app:civ_border_color="@color/green"
                android:layout_marginEnd="-16dp"
                app:civ_border_width="0.5dp"
                android:id="@+id/iv_from_escrow_view"
                android:layout_marginRight="-16dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/iv_to_escrow_view"
                android:src="@color/divider"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"
        android:layout_gravity="bottom"/>
</android.support.v7.widget.CardView>